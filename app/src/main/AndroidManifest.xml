<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="glbeukox.httpsgoo.vogtresume">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/splash_intro"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".splash_intro"
            android:label="SplashIntro"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".vogtResume" />
        <activity
            android:name=".launchResume"
            android:label="@string/title_activity_launch_resume"
            android:parentActivityName=".vogtResume"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="glbeukox.httpsgoo.vogtresume.vogtResume" />
        </activity>
        <activity
            android:name=".workAvailability"
            android:label="@string/workTitle"
            android:parentActivityName=".vogtResume">

        </activity>
        <activity
            android:name=".linkedInVogt"
            android:label="@string/linkedIn"
            android:parentActivityName=".linkedInVogt">

        </activity>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
